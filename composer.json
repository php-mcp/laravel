{
    "name": "php-mcp/laravel",
    "description": "The official Laravel integration for the PHP MCP Server package.",
    "keywords": [
        "laravel",
        "mcp",
        "model-context-protocol",
        "ai",
        "llm",
        "tools"
    ],
    "homepage": "https://github.com/php-mcp/laravel",
    "license": "MIT",
    "authors": [
        {
            "name": "Kyrian",
            "email": "okeowoaderukyrian@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "laravel/framework": "^9.46 || ^10.34 || ^11.29 || ^12.0",
        "php-mcp/server": "^1.0"
    },
    "require-dev": {
        "laravel/pint": "^1.13",
        "orchestra/testbench": "^8.0 || ^9.0",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0",
        "mockery/mockery": "^1.6",
        "phpunit/phpunit": "^10.0 || ^11.0",
        "react/http": "^1.11",
        "php-mcp/react-transport": "^0.1.0"
    },
    "autoload": {
        "psr-4": {
            "PhpMcp\\Laravel\\Server\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpMcp\\Laravel\\Server\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "PhpMcp\\Laravel\\Server\\McpServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
